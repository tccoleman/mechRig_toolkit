global proc quickSuffix(string $suffix)
{//quickSuffix

	string $jointSelected[0]= `ls -sl -long`;
	int $jointSelectedSize = size($jointSelected);

	for ($i=$jointSelectedSize-1; $i >= 0; $i--)
	{
		string $obj = $jointSelected[$i];
	
